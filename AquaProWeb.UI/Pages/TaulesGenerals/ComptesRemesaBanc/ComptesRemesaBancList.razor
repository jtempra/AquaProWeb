@page "/comptesremesabanc"


<MudTable Items="@ComptesRemesaBanc" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <ToolBarContent>
        <MudFab Color = "Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => AddCompteRemesaBancAsync())"></MudFab>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Descripcio</MudTh>
        <MudTh>IBAN</MudTh>
        <MudTh>BIC</MudTh>
        <MudTh>Sufixe</MudTh>
        <MudTh>Activa</MudTh>
        <MudTh>Observacions</MudTh>
        <MudTh>Acciones</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Canal">@context.Canal</MudTd>
        <MudTd DataLabel="Forma Pagament">@context.FormaPagament</MudTd>
        <MudTd DataLabel="Descripció">@context.Descripcio</MudTd>
        <MudTd DataLabel="Observacions">@context.Observacions</MudTd>
        <MudTd DataLabel="BIC">@context.BIC</MudTd>
        <MudTd DataLabel="Accions">
            <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
                <MudIconButton Color="Color.Success" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="(() => UpdateCompteRemesaBancAsync(context.Id))"></MudIconButton>
                <MudIconButton Color="Color.Warning" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="(() => DeleteCompteRemesaBancAsync(context.Id, context.Canal))"></MudIconButton>
            </MudButtonGroup>
        </MudTd>
    </RowTemplate>
</MudTable>