@page "/poblacions"


<MudTable Items="@Poblacions" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <ToolBarContent>
        <MudFab Color = "Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => AddPoblacioAsync())"></MudFab>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Nom</MudTh>
        <MudTh>Codi INE</MudTh>
        <MudTh>Observacions</MudTh>
        <MudTh>Explotacio</MudTh>
        <MudTh>Acciones</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nom">@context.Nom</MudTd>
        <MudTd DataLabel="Codi INE">@context.CodiINE</MudTd>
        <MudTd DataLabel="Observacions">@context.Observacions</MudTd>
        <MudTd DataLabel="Explotacio">@context.ExplotacioId</MudTd>
        <MudTd DataLabel="Accions">
            <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
                <MudIconButton Color="Color.Success" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="(() => UpdatePoblacioAsync(context.Id))"></MudIconButton>
                <MudIconButton Color="Color.Warning" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="(() => DeletePoblacioAsync(context.Id, context.Nom))"></MudIconButton>
            </MudButtonGroup>
        </MudTd>
    </RowTemplate>
</MudTable>