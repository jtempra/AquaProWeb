@using AquaProWeb.Common.Enums
@using AquaProWeb.Common.Requests
@using FluentValidation


<MudDialog>
    <TitleContent>
        Agregar Explotación
    </TitleContent>
    <DialogContent>
        <MudForm @ref="@_form" Model="CreateExplotacioDto" OnValidSubmit="OnValidSubmit" OnInvalidSubmit="OnInvalidSubmit"  Validation="explotacioValidator.ValidateValue">
            <MudTextField @bind-Value="CreateExplotacioDto.Codi" For="@(() => CreateExplotacioDto.Codi)"
                          Label="Codi"
                          Immediate="true"
                          Variant="Variant.Outlined">Codi</MudTextField>            
            <MudTextField @bind-Value="CreateExplotacioDto.Nom" For="@(() => CreateExplotacioDto.Nom)"
                          Label="Nom"
                          Immediate="true"
                          Variant="Variant.Outlined">Nom</MudTextField>

            <MudTextField @bind-Value="CreateExplotacioDto.Observacions" For="@(() => CreateExplotacioDto.Observacions)"
                          Label="Observacions"
                          Immediate="true"
                          Variant="Variant.Outlined">Observacions</MudTextField>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="@(async () => await Submit())">Guardar</MudButton>
    </DialogActions>
</MudDialog>
