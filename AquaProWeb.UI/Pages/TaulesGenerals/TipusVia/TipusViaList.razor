@page "/tipusvia"


<MudTable Items="@TipusVia" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <ToolBarContent>
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => AddTipusViaAsync())"></MudFab>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Codi</MudTh>
        <MudTh>Descripció</MudTh>
        <MudTh>Observacions</MudTh>
        <MudTh>Accions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Codi">@context.Codi</MudTd>
        <MudTd DataLabel="Descripcio">@context.Descripcio</MudTd>
        <MudTd DataLabel="Observacions">@context.Observacions</MudTd>
        <MudTd DataLabel="Accions">
            <MudFab Color="Color.Success" StartIcon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="(() => UpdateTipusViaAsync(context.Id))"></MudFab>
            <MudFab Color="Color.Warning" StartIcon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="(() => DeleteTipusViaAsync(context.Id, context.Codi))"></MudFab>
        </MudTd>
    </RowTemplate>
</MudTable>