@page "/ubicaciones"
@using AquaProWeb.Common.Responses.Abonats.Clients
@using AquaProWeb.Common.Responses.Abonats.PuntsSubministrament
@using AquaProWeb.Domain.Entities


<MudDataGrid T="@ReadPuntSubministramentDTO" Items="@PuntsSubministrament" Hover="@true" Loading="@_loading" FixedHeader="@true" FixedFooter="@true" Dense="@true" SortMode="SortMode.Multiple" Filterable="true" QuickFilter="@_quickFilter" ColumnResizeMode="ResizeMode.Container" >
    <ToolBarContent>
        <MudText Typo="Typo.h6">Clients</MudText>
        <MudSpacer />
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => AddPuntSubministramentAsync())"></MudFab>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Buscar" Adornment="Adornment.Start" Immediate="true" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Carrer" Title="Nom" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Numero" Title="1er Cognom" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Bloc" Title="2on Cognom" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Escala" Title="Tipus Client" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Pis" Title="Tipus Identificacio" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Porta" Title="Document Id." HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.ResteAdreça" Title="Tipus Via" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.PosicioGeografica" Title="Adreça" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Localitzacio"  Title = "CP" />
        <PropertyColumn Property="x => x.ReferenciaCatastral"  Title = "Poblacio" />
        <PropertyColumn Property="x => x.Observacions"  Title = "Provincia" />
        <PropertyColumn Property="x => x.DataAlta"  Title = "Pais" />
        <PropertyColumn Property="x => x.DataBaixa" Title="Reste Adreça" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.TipusUbicacio.Tipus" Title="Telefon 1" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.ZonaUbicacio.Zona" Title="Telefon 2" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Poblacio.Nom" Title="Telefon 3" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Escomesa.Nom" Title="Mobil 1" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.SituacioComptador" Title="Mobil 2" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.RutaLectura.Ruta" Title="Mobil 3" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.OrdreRutaLectura" Title="EMail 1" HeaderStyle="white-space:nowrap" />
        
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton Color="Color.Success" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="@(() => UpdatePuntSubministramentAsync(@context.Item.Id))"></MudIconButton> 
                    <MudIconButton Color="Color.Warning" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="@(() => DeletePuntSubministramentAsync(@context.Item.Id))"></MudIconButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="@ReadPuntSubministramentDTO" />
    </PagerContent>
</MudDataGrid>