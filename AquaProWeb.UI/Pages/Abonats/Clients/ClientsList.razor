@page "/clientes"
@using AquaProWeb.Common.Responses.Abonats.Clients
@using AquaProWeb.Domain.Entities


<MudDataGrid T="@ReadClientDTO" Items="@Clients" Hover="@true" Loading="@_loading" FixedHeader="@true" FixedFooter="@true" Dense="@true" SortMode="SortMode.Multiple" Filterable="true" QuickFilter="@_quickFilter" ColumnResizeMode="ResizeMode.Container" >
    <ToolBarContent>
        <MudText Typo="Typo.h6">Clients</MudText>
        <MudSpacer />
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => AddClientAsync())"></MudFab>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Buscar" Adornment="Adornment.Start" Immediate="true" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Nom" Title="Nom" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.PrimerCognom" Title="1er Cognom" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.SegonCognom" Title="2on Cognom" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.TipusContacte" Title="Tipus Contacte" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.TipusClient.Tipus" Title="Tipus Client" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.TipusDocumentIdentificacio" Title="Tipus Identificacio" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.DocumentIdentificacio" Title="Document Id." HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.TipusVia.Codi" Title="Tipus Via" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Adressa" Title="Adreça" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.CodiPostal"  Title = "CP" />
        <PropertyColumn Property="x => x.Poblacio"  Title = "Poblacio" />
        <PropertyColumn Property="x => x.Provincia"  Title = "Provincia" />
        <PropertyColumn Property="x => x.Pais.NomPais"  Title = "Pais" />
        <PropertyColumn Property="x => x.ResteAdressa" Title="Reste Adreça" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Telefon1" Title="Telefon 1" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Telefon2" Title="Telefon 2" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Telefon3" Title="Telefon 3" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Mobil1" Title="Mobil 1" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Mobil2" Title="Mobil 2" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Mobil3" Title="Mobil 3" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.EMail1" Title="EMail 1" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.EMail2" Title="EMail 2" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.EMail3" Title="EMail 3" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.Observacions"  Title = "Observacions" />
        <PropertyColumn Property="x => x.IBAN"  Title = "IBAN" />
        <PropertyColumn Property="x => x.DataAlta" Title="Data Alta" Format="dd/MM/yyyy" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.DataBaixa" Title="Data Baixa" Format="dd/MM/yyyy" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.RebCartes" Title="Reb Cartes" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.RebFactures" Title="Reb Factures" HeaderStyle="white-space:nowrap" />
        <PropertyColumn Property="x => x.RebRebuts" Title="Reb Rebuts" HeaderStyle="white-space:nowrap" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton Color="Color.Success" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="@(() => UpdateClientAsync(@context.Item.Id))"></MudIconButton> 
                    <MudIconButton Color="Color.Warning" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="@(() => DeleteClientAsync(@context.Item.Id, @context.Item.Nom))"></MudIconButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="@ReadClientDTO" />
    </PagerContent>
</MudDataGrid>