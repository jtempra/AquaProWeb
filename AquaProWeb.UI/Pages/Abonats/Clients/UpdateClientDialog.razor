<MudForm @ref="@_form" Model="ReadClientDto">
    <MudDialog>
        <TitleContent>
            Actualitzar Client
        </TitleContent>
        <DialogContent>
            <MudTextField @bind-Value="ReadClientDto.Id" Disabled="true"
                          Label="Id"
                          Immediate="true"
                          Variant="Variant.Outlined">ID</MudTextField>
            <MudTextField @bind-Value="ReadClientDto.Nom"
                          Label="Nom"
                          Immediate="true"
                          Variant="Variant.Outlined">Nom</MudTextField>

            <MudTextField @bind-Value="ReadClientDto.Observacions"
                          Label="Observacions"
                          Immediate="true"
                          Variant="Variant.Outlined">Observacions</MudTextField>

            <MudTextField @bind-Value="ReadClientDto.CodiPostal"
                          Label="Codi Postal"
                          Immediate="true"
                          Variant="Variant.Outlined">Codi Postal</MudTextField>

            <MudStack Spacing="6">

                <MudSelect Label="Població" MultiSelection="false" @bind-Value="ReadClientDto.PoblacioId">
                    @foreach (var poblacio in Poblacions)
                    {
                        <MudSelectItem Value="@poblacio.Id">@poblacio.Nom</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect Label="Zona" MultiSelection="false" @bind-Value="ReadClientDto.ZonaCarrersId">
                    @foreach (var zona in ZonesCarrers)
                    {
                        <MudSelectItem Value="@zona.Id">@zona.Zona</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect Label="Tipus Via" MultiSelection="false" @bind-Value="ReadClientDto.TipusViaId">
                    @foreach (var tipus in TipusVies)
                    {
                        <MudSelectItem Value="@tipus.Id">@tipus.Codi</MudSelectItem>
                    }
                </MudSelect>

                <MudSelect T="CategoriaVia" Label="Categoria Via" @bind-Value="ReadClientDto.CategoriaVia">
                    @foreach (var cat in Enum.GetValues(typeof(CategoriaVia)).Cast<CategoriaVia>())
                    {
                        <MudSelectItem Value="@cat">@cat.ToString()</MudSelectItem>
                    }
                </MudSelect>
            </MudStack>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton Color="Color.Primary" OnClick="SaveAsync">Guardar</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>
