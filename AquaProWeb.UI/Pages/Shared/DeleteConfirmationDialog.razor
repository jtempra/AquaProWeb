<MudDialog>
    <TitleContent>
        <MudText Type="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1"></MudIcon>
            Confirmació d'eliminació
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">No</MudButton>
        <MudButton OnClick="Acceptar" Color="Color.Error">Si</MudButton>
    </DialogActions>
</MudDialog>