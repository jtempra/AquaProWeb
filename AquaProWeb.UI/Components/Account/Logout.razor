@page "/logout"
@using AquaProWeb.UI.Authentication

@inject AuthenticationStateProvider AuthenticationState

@inject NavigationManager Navigation

@code {
    protected override async Task OnInitializedAsync()
    {
        // Realiza el logout utilizando el provider de autenticación
        ((CustomAuthenticationStateProvider)AuthenticationState).UpdateAuthenticationState(null);

        // Redirige a la página de inicio o cualquier otra página
        Navigation.NavigateTo("/login");
    }
}
